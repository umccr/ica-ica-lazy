{
  "name": "ega-aspera-scp-task-run",
  "execution": {
    "image": {
      "name": "ghcr.io/umccr/aspera",
      "tag": "latest"
    },
    "command": "/home/aspera/.aspera/connect/bin/ascp",
    "args": [
      "-P",
      "33001",
      "-O",
      "33001",
      "-QT",
      "-L",
      "-",
      "/mount/mount/media/inputs/",
      "${USERNAME}:${SECURE_PASSWORD}@${HOSTNAME}:${EGA_DEST_PATH}"
    ],
    "inputs": [
      {
        "mode": "stream",
        "type": "Folder",
        "url": "__GDS_INPUT_PATH__",
        "path": "/mount/mount/media/inputs/"
      }
    ],
    "outputs": [],
    "systemFiles": {
      "url": "__GDS_SYSTEM_FILES_PATH__"
    },
    "environment": {
      "variables": {
        "HOSTNAME": "__HOSTNAME__",
        "USERNAME": "__USERNAME__",
        "EGA_DEST_PATH": "__EGA_DEST_PATH__",
        "SECURE_PASSWORD": "__PASSWORD__"
      },
      "resources": {
        "type": "standardhicpu",
        "size": "medium"
      }
    },
    "retryLimit": 0
  }
}